<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <ul class="list-inline p-2">
            <li class="list-inline-item"><%= link_to 'View profile', user_path(user) %></li>
            <li class="list-inline-item"><%= link_to 'Favorite list', likes_user_path(user) %></li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>